<mui:ModernWindow xmlns:Views="clr-namespace:SC2LiquipediaStatistics.DesktopClient.View" 
        x:Class="SC2LiquipediaStatistics.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        IsTitleVisible="True">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Home">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Introduction" Source="/View/IntroductionView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Tournaments">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="All Events" Source="/View/ListEventsView.xaml" />
                <mui:Link DisplayName="Add New" Source="/View/AddEventView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Statistics">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Player" Source="/View/PlayerStatisticsView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
