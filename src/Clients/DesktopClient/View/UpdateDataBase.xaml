<UserControl x:Class="SC2LiquipediaStatistics.DesktopClient.View.UpdateDataBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SC2LiquipediaStatistics.DesktopClient.ViewModel"
             xmlns:Common="clr-namespace:SC2LiquipediaStatistics.DesktopClient.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Common:Behaviors.LoadedMethodName="OnLoad">
    <UserControl.DataContext>
        <local:UpdateDataBaseViewModel />
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True" />
    </Grid>
</UserControl>
